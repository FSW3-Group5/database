    "/api/v1/user/register": {
      "post": {
        "tags": ["User"],
        "summary": "Register.",
        "description": "Register account to Secondhand Web.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              },
              "examples": {
                "Dummy": {
                  "description": "Register dummy.",
                  "value": {
                    "name": "Awal",
                    "address": "Jl. Kaki No. 46",
                    "phone": "081234567890",
                    "image": "asdasdasdasd.png",
                    "email": "awal@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success."
          },
          "404": {
            "description": "Page not found."
          }
        }
      }
    },
